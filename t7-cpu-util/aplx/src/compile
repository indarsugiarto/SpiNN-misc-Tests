#!/bin/bash

APLX=profiler.aplx
BIN_DIR=../bin
make

if [ $1=="-c" ]; then
  echo "[INFO] Cleaning previous build..."
  make clean
fi

make

if [ -e $APLX ]; then
  if [ ! -d $BIN_DIR ]; then
    echo "[INFO] Creating bin directory..."
    mkdir -p $BIN_DIR
  fi
  echo
  echo "[INFO] moving aplx to "$BIN_DIR
  mv -f $APLX $BIN_DIR/
  echo "[INFO] result:"
  ls -AlF $BIN_DIR/$APLX
fi

